<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minButton2"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="minb"
        />

    <TextView
        android:layout_below="@+id/minButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="0"
        android:id="@+id/amountNumber2"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:layout_marginTop="10dp"

        
        />



    <TextView
        android:layout_below="@+id/amountNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Children"
        android:id="@+id/detailText2"
        android:layout_gravity="right"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        
        />

    <TextView
        android:layout_below="@+id/detailText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 - 2 years"
        android:id="@+id/detailText22"

        android:layout_centerHorizontal="true"


        
        />


    <Button
        android:layout_below="@+id/detailText22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plusButton2"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="plusb"
        />


</RelativeLayout>