<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minButton"
        android:layout_gravity="center_horizontal"
        android:onClick="mina"
        android:background="@drawable/button_custom"
        android:textColor="@color/btnf"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_below="@+id/minButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="0"
        android:id="@+id/amountNumber"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:layout_marginTop="10dp"


        />



    <TextView
        android:layout_below="@+id/amountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adult"
        android:id="@+id/detailText"
        android:layout_gravity="right"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        
        
        />

    <TextView
        android:layout_below="@+id/detailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Above 12 years"
        android:id="@+id/detailText2"
        android:lines="1"
        android:layout_centerHorizontal="true"
        
        
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plusButton"
        android:onClick="plusa"
        android:background="@drawable/button_custom"
        android:textColor="@color/btnf"
        android:layout_below="@+id/detailText2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>