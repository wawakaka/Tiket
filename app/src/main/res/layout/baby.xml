<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minButton3"
        android:layout_gravity="center_horizontal"
        android:onClick="minc"
        android:background="@drawable/button_custom"
        android:textColor="@color/btnf"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_below="@+id/minButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="0"
        android:id="@+id/amountNumber3"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:layout_marginTop="10dp"


        />



    <TextView
        android:layout_below="@+id/amountNumber3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baby"
        android:id="@+id/detailText3"
        android:layout_gravity="right"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"


        />

    <TextView
        android:layout_below="@+id/detailText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Below 2 years"
        android:id="@+id/detailText32"
        android:lines="1"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plusButton2"
        android:onClick="plusc"
        android:background="@drawable/button_custom"
        android:textColor="@color/btnf"
        android:layout_below="@+id/detailText32"
        android:layout_centerHorizontal="true" />


</RelativeLayout>